# Copy this file to .env and fill in your values.
# .env is gitignored â€” never commit real paths or credentials.

# Required: path to the VoxTell model directory.
# Must contain:  plans.json  and  fold_0/checkpoint_final.pth
VOXTELL_MODEL_DIR=/path/to/model

# Device: "cuda" or "cpu"
VOXTELL_DEVICE=cuda

# GPU index (ignored when VOXTELL_DEVICE=cpu)
VOXTELL_GPU_ID=0

# Text embedding model (default: Qwen/Qwen3-Embedding-4B)
# VOXTELL_TEXT_MODEL=Qwen/Qwen3-Embedding-4B

# Server listen address and port
VOXTELL_HOST=0.0.0.0
VOXTELL_PORT=8000

# Session lifetime in seconds (default: 7200 = 2 hours)
# VOXTELL_SESSION_TTL_SECONDS=7200

# Cleanup task interval in seconds (default: 300 = 5 minutes)
# VOXTELL_CLEANUP_INTERVAL_SECONDS=300

# Temp directory for session NIfTI files (default: /tmp/voxtell_sessions)
# VOXTELL_SESSION_DIR=/tmp/voxtell_sessions
